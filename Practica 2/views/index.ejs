<!DOCTYPE html>
<html>
  <head>
    <title>Juego del Mentiroso</title>
    <link rel='stylesheet' href='stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='stylesheets/style.css' />
  </head>
  <body>
    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/login.js"></script>
    
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12 title"><h3>Juego del mentiroso</h3></div>
      </div>
      <div class="row welcome">
        <div class="col-md-4 col-md-offset-1"><p class="text-center welcomeTxt">¡Bienvenido!</p></div>
        <div class= "col-md-6 col-md-offset-1"><img class="img-responsive welcomeImg" src="images/ImagenPortada.jpg"></div>
      </div>
      <div class="container formContainer">
      <form class="form" role="form" action="newUserForm" method="POST">
        <div class="form-group formRows">
            <label class="col-md-3 control-labelId">Identificarse</label>
        </div>
        <div class="form-group formRows">
          <label for="userName" class="col-md-3 control-label">Nombre de usuario:</label>
          <div class="col-md-12">
            <input class="form-control" id="usernameInput" name="userName" placeholder="Introduce nombre" type="text"/>
          </div>
        </div>
        <div class="form-group formRows">
          <label for="password" class="col-md-3 control-label">Contraseña:</label>
          <div class="col-md-12">
            <input class="form-control" id="passwordInput" name="password" placeholder="Introduce contraseña" type="password"/>
          </div>
        </div>
        <div class="form-group formRows">
          <div class="col-md-1">
            <button type="button" id="loginBtn" class="btn btn-primary">Aceptar</button>  
          </div>
          <div class="col-md-1">
            <button type="button" id="newUserBtn" class="btn btn-default">Nuevo usuario</button>
          </div>
        </div>
      </form>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p class="text-danger text-center errorTxt" id="errorTxt"></p>
        </div>
      </div>
    </div>
  </body>
</html>
